{
	"compilerOptions": {
		"target": "ES2024",
		"module": "NodeNext",
		"lib": ["ES2024"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"types": ["node"],
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*"]
}
